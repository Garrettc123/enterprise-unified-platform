# ============================================================================
# CLOUD PROVIDER CREDENTIALS
# ============================================================================

# AWS
AWS_CREDENTIALS=your-aws-access-key-id
AWS_SECRET=your-aws-secret-access-key
AWS_REGION=us-east-1

# Google Cloud Platform
GCP_CREDENTIALS={"type": "service_account", "project_id": "..."}
GCP_REGION=us-central1

# Microsoft Azure
AZURE_CREDENTIALS=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...
AZURE_REGION=eastus

# Render.com
RENDER_API_KEY=your-render-api-key

# Vercel
VERCEL_TOKEN=your-vercel-token
VERCEL_TEAM_ID=your-team-id

# ============================================================================
# DATABASE CONNECTION STRINGS
# ============================================================================

# PostgreSQL (Primary)
POSTGRES_PROD=postgresql://user:password@prod-db.example.com:5432/main_database
POSTGRES_PROD_USER=postgres
POSTGRES_PROD_PASSWORD=secure-password

# PostgreSQL (Backup)
POSTGRES_BACKUP=postgresql://user:password@backup-db.example.com:5432/main_database
POSTGRES_BACKUP_USER=postgres
POSTGRES_BACKUP_PASSWORD=secure-password

# MongoDB (Analytics)
MONGO_ANALYTICS=mongodb://user:password@analytics.mongodb.com:27017/analytics_db
MONGO_ANALYTICS_USER=analytics_user
MONGO_ANALYTICS_PASSWORD=secure-password

# DynamoDB (Cache)
DYNAMODB_CACHE=dynamodb://us-east-1/cache-table
DYNAMODB_ACCESS_KEY=your-access-key
DYNAMODB_SECRET_KEY=your-secret-key

# Elasticsearch (Search)
ELASTICSEARCH_SEARCH=https://user:password@search.example.com:9200
ELASTICSEARCH_INDEX=main-index

# ============================================================================
# GITHUB INTEGRATION
# ============================================================================

GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-webhook-signature-secret
GITHUB_OWNER=garrettc123
GITHUB_REPO=enterprise-unified-platform
GITHUB_WEBHOOK_URL=https://your-domain.com/webhook/github

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
ENVIRONMENT=production
DEBUG=False

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WEBHOOK_PORT=9000

# Sync Configuration
CLOUD_SYNC_INTERVAL=60
DATABASE_SYNC_INTERVAL=30
HEALTH_CHECK_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=sync_orchestration.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Database Batch Size
DB_BATCH_SIZE=100

# Connection Timeouts (seconds)
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60
WRITE_TIMEOUT=60

# Retry Policy
MAX_RETRIES=3
RETRY_DELAY=5

# Performance
MAX_CONCURRENT_SYNCS=5
MAX_CONCURRENT_DEPLOYMENTS=5
